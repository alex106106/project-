<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SaveThem" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/md_purple_200</item>
<!--        <item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="Theme.SaveThemLight" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/warning_color</item>
        <item name="android:colorSecondary" tools:targetApi="n_mr1">@color/secondary_color</item>
        <item name="android:textColorPrimary">@color/warning_color</item>
        <item name="android:textColorSecondary">@color/secondary_color</item>
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <style name="Theme.SaveThemDark" parent="android:ThemeOverlay.Material.Dark">
        <item name="android:colorPrimary">@color/warning_color</item>
        <item name="android:colorSecondary" tools:targetApi="n_mr1">@color/secondary_color</item>
        <item name="android:textColorPrimary">@color/on_surface</item>
        <item name="android:textColorSecondary">@color/on_surface</item>
        <item name="android:windowBackground">@color/surface_color</item>
    </style>
</resources>
